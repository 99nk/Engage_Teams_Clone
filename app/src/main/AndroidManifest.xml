<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niharika.engage_ms_teams">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Engage_MS_Teams">
        <activity android:name=".authentication.ResetPassword"></activity>
        <activity android:name=".activities.FeedbackActivity" />
        <activity android:name=".activities.TeamsActivity" />
        <activity android:name=".activities.MainChatActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".appIntro.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".appIntro.SplashScreen" />
        <activity android:name=".authentication.RegisterActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".activities.GroupChatActivity" />
        <activity
            android:name=".activities.StartInstantMeet"
            android:theme="@style/customTheme"></activity>
        <activity android:name=".activities.ScheduleMeet" />
        <activity android:name=".activities.ChatActivity" />
        <activity android:name=".activities.SearchContactsActivity" />
        <activity android:name=".activities.ProfileActivity" android:theme="@style/customTheme"/>
        <activity android:name=".activities.SettingsActivity" />
    </application>

</manifest>