<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/white"
    tools:context=".activities.ScheduleMeet">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/register" />

    <LinearLayout
        android:id="@+id/enter_meet_details_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:orientation="vertical">

        <EditText
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:hint="Enter team name"
            android:textColor="@color/black"
            android:textColorHint="@color/teal_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_date_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp" />

            <Button
                android:id="@+id/setDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button"
                android:text="Set Date"
                android:textAllCaps="false"
                android:textColor="@color/teal_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_time_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16sp" />

            <Button
                android:id="@+id/setTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button"
                android:text="Set Time"
                android:textAllCaps="false"
                android:textColor="@color/teal_200" />
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/teal_200"
            android:text="next"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_invite_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/email_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:hint="Enter email id"
            android:textColor="@color/black"
            android:textColorHint="@color/teal_200" />

        <Button
            android:id="@+id/send_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_button"
            android:padding="10dp"
            android:text="Send Invite Mail to this Email id"
            android:textAllCaps="false"
            android:textColor="@color/teal_200" />

        <Button
            android:id="@+id/done"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/teal_200"
            android:text="done"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>